
.row.vcenter
    .large-4.large-offset-4.columns
        h1 {{login.loginError}}
        form
            .row
                .large-12.columns
                    label Логин
                        input(type="text", ng-model="login.user" placeholder="Введите логин")
            .row
                .large-12.columns
                    label Пароль
                        input(type="password", ng-model="login.pass")
            .row
                input.button(type="button", ng-click="login.click()", value="Сабмит")
